<p id="notice"><%= notice %></p>

<h1>Classrooms</h1>
<%= link_to "Add New Class", new_classroom_path %>
Total Classrooms found: <%=Classroom.count %>
<table>
  <thead>
    <tr>
       <th>#</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each_with_index do |classroom, index| %>
      <tr>
         <td><%=index +1 %> </td>
        <td><%= classroom.name %></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

