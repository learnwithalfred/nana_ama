
          <h3><%= greeting(current_user.name) %>!</h3>
          <p class="mb-md-0">
            Welcome back to <%= @classroom.name %> student's dashboard.
          </p>

      <% if is_school_staff %>
        <%= link_to "Edit this classroom", edit_classroom_path(@classroom) %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body dashboard-tabs p-0">
        <ul class="nav nav-tabs px-4" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="overview-tab"
              data-bs-toggle="tab"
              href="#overview"
              role="tab"
              aria-controls="overview"
              aria-selected="true"
              >Overview</a
            >
          </li>
        </ul>
        <div class="tab-content py-0 px-0">
          <div
            class="tab-pane fade show active"
            id="overview"
            role="tabpanel"
            aria-labelledby="overview-tab"
          >
            <div class="d-flex flex-wrap justify-content-xl-between">
              <a
                href="/classrooms/<%= params[:id] %>/courses"
                ,
                style="color: inherit; text-decoration: none"
              >
                <div
                  class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item"
                >
                  <i
                    class="mdi mdi-book-open-page-variant me-3 icon-lg text-danger"
                  ></i>
                  <div class="d-flex flex-column justify-content-around">
                    <small class="mb-1 text-muted">Lessons</small>
                    <h5 class="me-2 mb-0"><%= @classroom.courses.count %></h5>
                  </div>
                </div>
              </a>
              <a
                href="/classrooms/<%= params[:id] %>/students"
                ,
                style="color: inherit; text-decoration: none"
              >
                <div
                  class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item"
                >
                  <i
                    class="mdi mdi-account-switch me-3 icon-lg text-success"
                  ></i>
                  <div class="d-flex flex-column justify-content-around">
                    <small class="mb-1 text-muted">Student List</small>
                    <h5 class="me-2 mb-0"><%= @classroom.students.count %></h5>
                  </div>
                </div>
              </a>

              <div
                class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item"
              >
                <i class=" mdi mdi-comment-processing-outline me-3 icon-lg text-danger"></i>
                <div class="d-flex flex-column justify-content-around">
                  <small class="mb-1 text-muted">Submit</small>
                  <h5 class="me-2 mb-0"></h5>
                </div>
              </div>
                <%=link_to edit_user_registration_path, class:"d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item", style: "color: inherit; text-decoration: none" do %>
                <i class=" mdi mdi-face me-3 icon-lg text-primary"></i>
                <div class="d-flex flex-column justify-content-around">
                  <small class="mb-1 text-muted">Update Profile</small>
                  <h5 class="me-2 mb-0"></h5>
                </div>
              <%end %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

