<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="mt-6">
    <%= form.label :title,class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
    <div class="mt-1 rounded-md shadow-sm">
     <%= form.text_field :title, class:"transition border focus:outline-none focus:shadow-outline-blue block w-full appearance-none rounded-md border-gray-300 px-3 py-2 placeholder-gray-400 duration-150 ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5" %>
    </div>
  </div>



    <div class="mt-6">
      <%= form.label :course_date, class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
      <div class="mt-1 rounded-md shadow-sm">
        <%= form.datetime_select :course_date,class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.label "Content",class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
      <div class="mt-1 rounded-md shadow-sm">
         <%= form.rich_text_area :content %>
      </div>
    </div>

  
<div class="flex flex-wrap -mx-3 my-4">
  
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">

      <div class="relative">
                <%= form.label "Subject Name",class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%=form.collection_select :subject_id, Subject.order(:name), :id, :name , class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
            </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
       <%= form.label :status %>
    <div>
      <%= form.select :status, [["Select Status of course", ""], ["pending", "pending"], ["active", "active"], ["archived", "archived"]],autocomplete: "status" , class:"transition border focus:outline-none
          focus:shadow-outline-blue block w-full appearance-none rounded-md
          border-gray-300 px-3 py-2 placeholder-gray-400 duration-150
          ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5", required:"true"%>
    </div>
    </div>
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
           <%= form.label "Class Name",class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%=form.collection_select :classroom_id, Classroom.order(:role), :id, :name, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
            </div>
        </div>
    </div>

  <div class="mt-6">
    <%= form.submit "Submit", class: "transition border bg-blue-500
      hover:bg-blue-700 focus:outline-none group relative flex w-full
      justify-center rounded-md border-transparent px-4 py-2 my-4 text-sm
      font-medium leading-5 text-white duration-150 ease-in-out" %>
  </div>
<% end %>
