  <div class="mt-10 flex flex-col">
    <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="border-b shadow md:custom-box-shadow overflow-hidden border-gray-200">
          <table class="divide-y min-w-full divide-gray-200">
            <thead>
              <tr>
                <th class="w-1">#</th>
                <th class="bg-gray-50 px-6 py-3 text-left text-sm font-bold leading-4 tracking-wider text-bb-gray-600 text-opacity-50">Title</th>
                <th class="w-3"></th>
                <th class="w-3"></th>
                <th class="w-3"></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr>
                <% @announcements.each_with_index do |announcement, index| %>
                  <td class="whitespace-no-wrap px-6 py-4 text-sm font-medium leading-5 text-bb-gray-600"><%= index + 1 %></td>
                  <td class="whitespace-no-wrap px-6 py-4 text-sm font-medium leading-5 text-bb-gray-600"><%= announcement.title %></td>
                  <td class="px-6  py-4"><%= link_to 'Show', announcement %></td>
                  <td class="px-6  py-4"><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
                  <td class="px-6  py-4"><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>